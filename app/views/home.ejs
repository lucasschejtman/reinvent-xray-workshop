<%- contentFor('body') %>

<script type="text/javascript">
  $(document).ready(() => {
    $("#signup").click(() => {
      $.post( "/signup", 
        $("#signupForm").serialize(),
        _ => $("#signupSuccess").show()
      )
      .error(xhr => {
        switch(xhr.status) {
          case 409:
            $("#signupDuplicate").show();
            break;
          default:
            $("#signupError").show();
        }
      })
      .always(() => {
        $("#signupModal").modal('hide');
      });
    })
  });
</script>
